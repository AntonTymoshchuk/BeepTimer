<StandardButton@Button>:
    color: [0, 0, 0, 1]
    font_size: sp(18)
    height: dp(30)
    background_normal: 'colors/blue/500.png'
    background_down: 'colors/blue/300.png'
    border: [0, 0, 0, 0]

<SquareButton@StandardButton>:
    size_hint: (None, None)
    width: dp(30)

<PlusButton@SquareButton>:
    text: '+'

<MinusButton@SquareButton>:
    text: '−'

<WideButton@StandardButton>:
    size_hint: (1, None)

<TimeTextInput@TextInput>:
    size_hint: (None, None)
    size: (dp(60), dp(30))
    color: [0, 0, 0, 1]
    font_size: sp(18)
    halign: 'center'
    background_normal: 'colors/grey/100.png'
    background_active: 'colors/grey/200.png'
    background_disabled_normal: 'colors/grey/300.png'
    border: [0, 0, 0, 0]

<MinutesTextInput@TimeTextInput>:
    text: '5'

<SecondsTextInput@TimeTextInput>:
    text: '60'

<StandardLabel@Label>:
    size_hint: (None, None)
    size: self.texture_size
    height: dp(30)
    color: [0, 0, 0, 1]
    font_size: sp(18)

<SignalLayout@BoxLayout>:
    orientation: 'vertical'
    size_hint: (1, None)
    height: dp(100)
    canvas.before:
        Color:
            rgb: (1, 0, 0)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'horizontal'
        StandardLabel:
            text: 'Сигнал за:'

<BeepTimerLayout>:
    SignalLayout:
